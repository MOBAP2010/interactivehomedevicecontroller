%h2
  = "Device: #{@device.name}"
- content_tag_for :div, @device do
  %ul.device-attributes
    %li
      %strong Name:
      =h @device.name
    %li
      %strong Location:
      =h @device.location
    %li
      %strong DeviceType
      =h @device.device_type
    %li
      %strong Power:
      =h power_switch @device.power

%ul.device-actions
  %li= link_to 'Edit', edit_device_path(@device)
  %li= link_to 'Back', devices_path